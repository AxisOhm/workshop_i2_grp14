{
  "manifest_version": 3,

  "name": "Sanity Regex",
  "description": "To reach Sanity from Insanity.",
  "version": "0.1",
  "icons": {
    "48": "Assets/sanity_icon.png"
  },
  "background": {
    "service_worker": "content/BackgroundWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "framework/*",
        "content/*"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}